<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="CategoryImageStorage" deprecated="Not in use anymore, will be removed with next major release.">
        <property name="idCategoryImage" type="int"/>
        <property name="externalUrlLarge" type="string"/>
        <property name="externalUrlSmall" type="string"/>
    </transfer>

    <transfer name="CategoryImageSetStorage" deprecated="Not in use anymore, will be removed with next major release.">
        <property name="name" type="string"/>
        <property name="images" singular="image" type="CategoryImageStorage[]"/>
    </transfer>

    <transfer name="CategoryImageSetCollectionStorage" deprecated="Use `CategoryImageStorageItemDataTransfer` instead.">
        <property name="idCategory" type="int"/>
        <property name="imageSets" singular="imageSet" type="CategoryImageSetStorage[]"/>
    </transfer>

    <transfer name="CategoryImageStorageItem">
        <property name="idCategoryImageStorage" type="int"/>
        <property name="fkCategory" type="int"/>
        <property name="data" type="CategoryImageStorageItemData"/>
        <property name="locale" type="string"/>
        <property name="key" type="string"/>
        <property name="isSendingToQueue" type="bool"/>
    </transfer>

    <transfer name="CategoryImageStorageItemData">
        <property name="idCategory" type="int"/>
        <property name="imageSets" singular="imageSet" type="CategoryImageSet[]"/>
    </transfer>

</transfers>
