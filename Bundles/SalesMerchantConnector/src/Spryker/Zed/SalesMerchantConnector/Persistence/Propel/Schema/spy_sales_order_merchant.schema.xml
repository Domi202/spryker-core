<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\SalesMerchantConnector\Persistence" package="src.Orm.Zed.SalesMerchantConnector.Persistence"
>
    <table name="spy_sales_order_merchant" phpName="SpySalesOrderMerchant">
        <column name="id_sales_order_merchant" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="sales_order_merchant_reference" required="true" type="VARCHAR" size="255"/>
        <column name="merchantReference" type="VARCHAR" required="true" size="255" />
        <column name="fk_sales_order" type="INTEGER" required="true"/>

        <unique name="spy_sales_order_merchant-sales_order_merchant_reference">
            <unique-column name="sales_order_merchant_reference"/>
        </unique>

        <foreign-key name="spy_sales_order_merchant-fk_sales_order" foreignTable="spy_sales_order" phpName="Order">
            <reference local="fk_sales_order" foreign="id_sales_order"/>
        </foreign-key>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_sales_order_merchant_pk_seq"/>
    </table>

</database>
