{% extends '@Sales/Layout/layout.twig' %}

{% block action %}
    {{ backActionButton('/sales', 'Back to Orders' | trans) }}
{% endblock %}

{% block section_title %}
    {{ 'View Order:' | trans }} {{ order.idSalesOrder }}
{% endblock %}

{% block content %}

    <div id="order-overview">{% include '@Sales/Detail/boxes/order-overview.twig' %}</div>
    <div id="customer">{% include '@Sales/Detail/boxes/customer.twig' %}</div>
    <div id="items">{% include '@Sales/Detail/boxes/items.twig' %}</div>
    {% for blockName, externalBlock in blocks %}
    <div id="{{ blockName }}">{{ externalBlock | raw }}</div>
    {% endfor %}
     {# @deprecated Addresses block exists for Backward Compatibility reasons only. #}
    {%  if not isMultiShipmentEnabled %}
        <div id="address">{% include '@Sales/Detail/boxes/addresses.twig' %}</div>
    {% endif %}
    <div id="comments">{% include '@Sales/Detail/boxes/comments.twig' %}</div>

{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/css/spryker-zed-sales-main.css">
{% endblock %}
