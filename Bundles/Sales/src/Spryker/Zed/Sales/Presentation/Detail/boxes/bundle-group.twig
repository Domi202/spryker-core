{% set itemCount = items | length  %}

{% for orderItem in items %}
  <tr>
    {% if loop.index == 1 %}
      {% embed '@Sales/Detail/boxes/order-item.twig' with {orderItem: orderItem, displayImage: true, displayTotals: true, group: true, rowCount: rowCount, bundleItem: bundleItem, itemCount: itemCount} %}{% endembed %}
    {% else %}
      {% embed '@Sales/Detail/boxes/order-item.twig' with {orderItem: orderItem, displayImage: false, displayTotals: false, group: false} %}{% endembed %}
    {% endif %}
  </tr>
  {# Fallback product options display is kept for BC reasons. #}
  {% if not (bundleItem.productOptions | length) %}
    {% embed '@Sales/Detail/boxes/order-item-option.twig' with {orderItem: orderItem} %} {% endembed %}
  {% endif %}
{% endfor %}

{% embed '@Sales/Detail/boxes/order-item-option.twig' with {orderItem: bundleItem} %} {% endembed %}
