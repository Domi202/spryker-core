<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\SalesReturnPageSearch\Persistence" package="src.Orm.Zed.SalesReturnPageSearch.Persistence">

    <table name="spy_sales_return_reason_page_search" identifierQuoting="true">
        <column name="id_spy_sales_return_reason_page_search" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_return_reason" type="INTEGER" required="true"/>
        <!-- 'structured_data' column contains the result from database query while 'data' column contains mapped data for the search engine -->
        <column name="structured_data" type="LONGVARCHAR" required="true"/>

        <index name="spy_sales_return_reason_page_search-fk_sales_return_reason">
            <index-column name="fk_sales_return_reason"/>
        </index>

        <id-method-parameter value="spy_sales_return_reason_page_search_pk_seq"/>

        <behavior name="synchronization">
            <parameter name="resource" value="return_reason"/>
            <parameter name="locale" required="true"/>
            <parameter name="key_suffix_column" value="fk_sales_return_reason"/>
            <parameter name="queue_group" value="sync.search.return"/>
            <parameter name="params" value='{"type":"page"}'/>
        </behavior>
        <behavior name="timestampable"/>
    </table>

</database>
