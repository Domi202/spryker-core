<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\ProductConfigurableBundle\Persistence" package="src.Orm.Zed.ProductConfigurableBundle.Persistence"
>
    <table name="spy_product_configurable_bundle" phpName="SpyProductConfigurableBundle">
        <column name="id_product_configurable_bundle" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="uuid" required="false" type="VARCHAR" size="255"/>

        <unique name="spy_product_configurable_bundle-uuid">
            <unique-column name="uuid"/>
        </unique>

        <behavior name="uuid">
            <parameter name="key_columns" value="id_product_configurable_bundle"/>
        </behavior>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_product_configurable_bundle_pk_seq"/>
    </table>

    <table name="spy_product_configurable_bundle_slot" phpName="SpyProductConfigurableBundleSlot">
        <column name="id_product_configurable_bundle_slot" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="uuid" required="false" type="VARCHAR" size="255"/>
        <column name="fk_product_configurable_bundle" type="INTEGER" required="true"/>
        <column name="fk_product_list" type="INTEGER"/>

        <index name="spy_product_configurable_bundle_slot-fk_product_conf_bundle">
            <index-column name="fk_product_configurable_bundle"/>
        </index>

        <index name="spy_product_configurable_bundle_slot-fk_product_list">
            <index-column name="fk_product_list"/>
        </index>

        <behavior name="uuid">
            <parameter name="key_columns" value="id_product_configurable_bundle_slot"/>
        </behavior>

        <foreign-key name="spy_product_configurable_bundle_slot-fk_product_conf_bundle" foreignTable="spy_product_configurable_bundle">
            <reference foreign="id_product_configurable_bundle" local="fk_product_configurable_bundle"/>
        </foreign-key>

        <foreign-key name="spy_product_configurable_bundle_slot-fk_product_list" foreignTable="spy_product_list">
            <reference foreign="id_product_list" local="fk_product_list"/>
        </foreign-key>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_product_configurable_bundle_slot_pk_seq"/>
    </table>

    <table name="spy_sales_order_configurable_bundle" phpName="SpySalesOrderConfigurableBundle">
        <column name="id_sales_order_configurable_bundle" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="product_configurable_bundle_uuid" required="true" type="VARCHAR" size="255"/>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_sales_order_configurable_bundle_pk_seq"/>
    </table>

    <table name="spy_sales_order_configurable_bundle_item" phpName="SpySalesOrderConfigurableBundleItem">
        <column name="id_sales_order_configurable_bundle_item" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_order_configurable_bundle" type="INTEGER" required="true"/>
        <column name="fk_sales_order_item" type="INTEGER" required="true"/>
        <column name="product_configurable_bundle_slot_uuid" required="true" type="VARCHAR" size="255"/>

        <index name="spy_sales_order_conf_bundle_item-fk_sales_order_conf_bundle">
            <index-column name="fk_sales_order_configurable_bundle"/>
        </index>

        <index name="spy_sales_order_configurable_bundle_item-fk_sales_order_item">
            <index-column name="fk_sales_order_item"/>
        </index>

        <foreign-key name="spy_sales_order_conf_bundle_item-fk_sales_order_conf_bundle" foreignTable="spy_sales_order_configurable_bundle">
            <reference foreign="id_sales_order_configurable_bundle" local="fk_sales_order_configurable_bundle"/>
        </foreign-key>

        <foreign-key name="spy_sales_order_configurable_bundle_item-fk_sales_order_item" foreignTable="spy_sales_order_item">
            <reference foreign="id_sales_order_item" local="fk_sales_order_item"/>
        </foreign-key>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_sales_order_configurable_bundle_item_pk_seq"/>
    </table>

</database>
