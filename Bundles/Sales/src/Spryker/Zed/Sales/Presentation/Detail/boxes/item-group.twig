{% for group in groups if not group.groupItems[0].salesOrderConfiguredBundleItem | default %}
    {% if (group.isBundle) %}
        {% embed '@Sales/Detail/boxes/order-item.twig' with {
            orderItem: group.bundleItem,
            isBundleProduct: true,
            displayImage: true,
            displayTotals: true
        } %}{% endembed %}
        {% embed '@Sales/Detail/boxes/bundle-group.twig' with {
            items: group.groupItems,
            bundleItem: group.bundleItem
        } %}{% endembed %}
    {% else %}
        {% embed '@Sales/Detail/boxes/single-item.twig' with {item: group.groupItems | first} %}{% endembed %}
    {% endif %}
{% endfor %}
