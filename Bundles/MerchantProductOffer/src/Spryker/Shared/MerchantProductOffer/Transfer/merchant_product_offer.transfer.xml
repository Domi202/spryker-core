<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="ProductOffer">
        <property name="fkMerchant" type="int"/>
        <property name="merchantSku" type="string"/>
    </transfer>

    <transfer name="Item">
        <property name="productOffer" type="ProductOffer"/>
        <property name="merchantReference" type="string"/>
        <property name="sku" type="string"/>
    </transfer>

    <transfer name="MerchantCriteriaFilter">
        <property name="merchantReference" type="string"/>
    </transfer>

    <transfer name="Merchant">
        <property name="merchantProfile" type="MerchantProfile"/>
    </transfer>

    <transfer name="Message">
        <property name="type" type="string"/>
        <property name="value" type="string"/>
        <property name="parameters" type="array" singular="parameters"/>
    </transfer>

    <transfer name="MerchantProfile">
        <property name="merchantName" type="string"/>
        <property name="isActive" type="bool"/>
    </transfer>

    <transfer name="CartChange">
        <property name="items" type="Item[]" singular="item"/>
    </transfer>

    <transfer name="CartPreCheckResponse">
        <property name="messages" type="Message[]" singular="message"/>
        <property name="isSuccess" type="bool"/>
    </transfer>

    <transfer name="Quote">
        <property name="items" type="Item[]" singular="item"/>
    </transfer>

    <transfer name="CheckoutResponse">
        <property name="errors" type="CheckoutError[]" singular="error"/>
        <property name="isSuccess" type="bool"/>
    </transfer>

    <transfer name="CheckoutError">
        <property name="message" type="string"/>
        <property name="parameters" type="array" singular="parameters"/>
    </transfer>
</transfers>