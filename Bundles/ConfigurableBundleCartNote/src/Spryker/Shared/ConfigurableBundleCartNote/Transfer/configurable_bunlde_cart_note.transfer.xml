<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd"
>
    <transfer name="ConfiguredBundle">
        <property name="cartNote" type="string"/>
        <property name="groupKey" type="string"/>
    </transfer>

    <transfer name="SalesOrderConfiguredBundle">
        <property name="cartNote" type="string"/>
    </transfer>

    <transfer name="ConfigurableBundleCartNoteRequest">
        <property name="idQuote" type="int"/>
        <property name="customer" type="Customer"/>
        <property name="configurableBundleGroupKey" type="string"/>
        <property name="cartNote" type="string"/>
    </transfer>

    <transfer name="Quote">
        <property name="items" type="Item[]" singular="item"/>
        <property name="customer" type="Customer"/>
        <property name="idQuote" type="int"/>
    </transfer>

    <transfer name="Item">
        <property name="configuredBundle" type="ConfiguredBundle"/>
    </transfer>

    <transfer name="QuoteResponse">
        <property name="isSuccessful" type="bool"/>
        <property name="quoteTransfer" type="Quote"/>
    </transfer>

    <transfer name="ItemCollection">
        <property name="items" type="Item[]" singular="item"/>
    </transfer>

</transfers>

