<?xml version="1.0"?>
<transfers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="spryker:transfer-01"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Item">
        <property name="configurableBundle" type="ConfigurableBundle" />
    </transfer>

    <transfer name="ConfigurableBundle">
        <property name="bundle" type="ProductConfigurableBundle" />
        <property name="slot" type="ProductConfigurableBundleSlot" />
        <property name="quantity" type="int" />
        <property name="groupKey" type="string" />
    </transfer>

    <transfer name="ProductConfigurableBundle">
        <property name="id" type="int" />
        <property name="uuid" type="string" />
    </transfer>

    <transfer name="ProductConfigurableBundleSlot">
        <property name="idProductConfigurableBundleSlot" type="int" />
        <property name="idProductConfigurableBundle" type="int" />
        <property name="uuid" type="string" />
    </transfer>

</transfers>
